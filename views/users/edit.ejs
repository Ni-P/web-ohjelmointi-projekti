
<% include ../partials/header.ejs %>

<form class="col s12 form-content" method="POST">
    <h4 class="center-align">Edit users contact details</h4>
    <div class="row">
        <div class="input-field col s12">
            <label for="firstname-field">First Name</label>
            <input id="firstname-field" type="text" name="firstname" class="validate" value="<%= user.firstname%>">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="lastname-field">Last Name</label>
            <input id="lastname-field" type="text" name="lastname" class="validate" value="<%= user.lastname%>">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="address-field">Address</label>
            <input id="lastname-field" type="text" name="address" class="validate" value="<%= user.address%>">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="postalcode-field">Postal Code</label>
            <input id="postalcode-field" type="number" name="postalcode" class="validate" value="<%= user.postalCode%>">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="phone-field">Phone Number</label>
            <input id="phone-field" type="number" name="phone" class="validate" value="<%= user.phone%>">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="email-field">Email</label>
            <input id="email-field" type="email" name="email" class="validate" value="<%= user.email%>">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col s12">
            <input class="btn green darken-3" type="submit" value="Submit"/>
            <a class="btn red darken-1" href="/users/<%= user.id %>/show">Cancel</a>
        </div>
    </div>
</form>

<% include ../partials/footer.ejs %>