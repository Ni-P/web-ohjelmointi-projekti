
<% include ../partials/header.ejs %>

<form class="col s12 form-content" method="POST">
    <h2>Please login to make reservations</h2>
    <div class="row">
        <div class="input-field col s12">
            <label for="username">Username</label>
            <input id="username-field" type="text" name="username" class="validate">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="password-field">Password</label>
            <input id="password-field" type="password" name="password" class="validate">
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <input class="btn blue darken-1" type="submit" value="Login"/>
            <!--<span>Or</span>-->
            <!--<a class="btn green darken-1" href="/users/register">Register</a>-->
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <h5>New user?</h5>
            <a class="btn green darken-1" href="/users/register">Click here to Register</a>
        </div>
    </div>
</form>

