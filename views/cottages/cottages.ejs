
<% include ../partials/header.ejs %>

<div class="cottages-content">
    <div class="row">
        <% results.forEach(function(cottage){ %>
        <div class="col s12 l6">
            <div class="card">
                <div class="card-image">
                    <img src="images/<%= cottage.image %>">
                    <span class="card-title"><%= cottage.name %></span>
                </div>
                <div class="card-content">
                    <p><%= cottage.location %></p>
                    <p><%= cottage.description %></p>
                    <p>Price <%= cottage.price %> per day</p>
                </div>
                <div class="card-action">
                    <a href="/reservations/<%= cottage.id %>/new">Reserve</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer.ejs %>