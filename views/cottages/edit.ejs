
<% include ../partials/header.ejs %>

<div class="row body-content">
    <h5 class="center-align">Edit cottage</h5>
    <form class="col s12" method="post">
        <div class="row">
            <div class="input-field col s12">
                <label for="cottage_name">Cottage name</label>
                <input id="cottage_name" type="text" name="name" class="validate" required value="<%=cottage.name%>">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="cottage_location">Cottage location</label>
                <input id="cottage_location" type="text" name="location" class="validate" required value="<%=cottage.location%>">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <select class="icons" name="image">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="5817409647_50a0f1bf51_b.jpg" data-icon="/images/5817409647_50a0f1bf51_b.jpg">cottage 1</option>
                    <option value="5817418723_2bda59f000_b.jpg" data-icon="/images/5817418723_2bda59f000_b.jpg">cottage 2</option>
                    <option value="5817984136_a85f4ab07b_b.jpg" data-icon="/images/5817984136_a85f4ab07b_b.jpg">cottage 3</option>
                    <option value="5817414031_3332e5b4c2_b.jpg" data-icon="/images/5817414031_3332e5b4c2_b.jpg">cottage 4</option>
                    <option value="5817988312_2dab77e8a9_b.jpg" data-icon="/images/5817988312_2dab77e8a9_b.jpg">cottage 5</option>
                </select>
                <label>Images in select</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="description">Cottage description</label>
                <input id="description" type="text" name="description" class="validate" required value="<%=cottage.description%>">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="price">Cottage price</label>
                <input id="price" type="text" name="price" class="validate" required value="<%=cottage.price%>">
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <input class="btn green darken-3" type="submit"/>
                <a class="btn red darken-1" href="/cottages">Cancel</a>
            </div>
        </div>
    </form>
</div>

<% include ../partials/footer.ejs %>
