
<% include ../partials/header.ejs %>

<div class="row body-content">
    <form class="col s12" method="post">
        <div class="row">
            <div class="input-field col s12">
                <label for="cottage_name">Cottage name</label>
                <input id="cottage_name" type="text" name="name" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="cottage_location">Cottage location</label>
                <input id="cottage_location" type="text" name="location" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="image">Image URL</label>
                <input id="image" type="text" name="image" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="description">Cottage description</label>
                <input id="description" type="text" name="description" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="price">Cottage price</label>
                <input id="price" type="text" name="price" class="validate">
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <input class="btn green darken-3" type="submit"/>
                <a class="btn red darken-1" href="/cottages">Cancel</a>
            </div>
        </div>
    </form>
</div>

